{
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "routes": [
        "routes"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}